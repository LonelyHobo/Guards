/* pages/appointment/appointment.wxss */
@import "../public/iconfont";

.header-height {
  height: 100rpx;
}

.appointement-head {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #869ecb;
  z-index: 9999;
}

.appointement-head .head-title {
  font-size: 35rpx;
  line-height: 100rpx;
  display: block;
  text-align: center;
  color: white;
}

.appointement-head .head-close {
  position: absolute;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  min-width: 90rpx;
  height: 50rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  color: white;
}

.appointement-content .top {
  background-color: #869ecb;
}

.appointement-content .top .content-name {
  padding: 30rpx 0 0 0;
  width: 90%;
  margin: 0 auto;
  font-size: 50rpx;
  color: white;
}

.appointement-content .top .content-title {
  overflow: hidden;
  padding: 25rpx 0 50rpx 0;
  width: 90%;
  margin: 0 auto;
  margin-top: 0;
  font-size: 35rpx;
  color: white;
}

.appointement-content .top .content-title .l {
  float: left;
}

.appointement-content .top .content-title .r {
  float: left;
  color: #dddddd;
  font-size: 35rpx;
  margin-left:10rpx;
}

.appointement-content .center {
  background-color: white;
}

.appointement-content .center .content-name {
  padding: 30rpx 0;
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #eee;
  font-size: 30rpx;
  font-weight: 600;
}

.appointement-content .center .content-tel {
  overflow: hidden;
  padding: 25rpx 0;
  width: 90%;
  margin: 0 auto;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}

.appointement-content .center .content-tel .l {
  float: left;
  width: 50%;
}

.appointement-content .center .content-tel .r {
  float: right;
  width: 50%;
  color: #3d4bf6;
  font-size: 28rpx;
  text-align: right;
}

.appointement-content .center .content-code {
  padding: 10rpx 0;
  width: 90%;
  margin: 0 auto;
}

.appointement-content .center .content-code input {
  height: 80rpx;
  font-size: 30rpx;
}

.appointement-content .bottom {
  border-top: 20rpx solid #f5f5f5;
}

.appointement-content .bottom textarea {
  background-color: white;
  height: 250rpx;
  width: 90%;
  font-size: 30rpx;
  padding: 20rpx 5%;
}

.appointement-content .bottom button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  color: white;
  font-size: 30rpx;
  line-height: 100rpx;
  letter-spacing: 3rpx;
  background:#cccccc;
  border-radius: 0;
   z-index: 99999;
}
.appointement-content .bottom button.on{
  background:-webkit-linear-gradient(left, #2689f7, #3e49f6);
}
 
page {
  background-color: #f5f5f5;
}

.agreement {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 0 0;
  background-color: white;
  z-index: 99999;
}

.agreement .l {
  width: 92%;
  padding: 20rpx 4%;
  position: relative;
  z-index: 9;
  background-color: white;
  height: 60rpx;
}

.agreement .l .checkbox {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  float: left;
  margin: 9rpx 0;
}

.agreement .l .checkbox .iconfont {
  color: #3c0;
  font-size: 30rpx;
  font-weight: 600;
  display: none;
}
.agreement .l .checkbox.on .iconfont{
  display: block;
}
.agreement .l .text {
  margin-left: 70rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.agreement .l .text .iconfont {
  font-size: 35rpx;
}

.agreement .r {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  height: 60vh;
  background-color: white;
}

.agreement .r.bottom {
  top:0;
}

.agreement .r.top {
  top:-60vh;
}

.agreement .r .r-top {
  height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
}

.agreement .r .r-top .title {
  font-size: 35rpx;
  line-height: 100rpx;
  display: block;
  text-align: center;
}

.agreement .r .r-top .close {
  position: absolute;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  min-width: 90rpx;
  height: 50rpx;
  font-size: 32rpx;
  color:#999999;
  line-height: 50rpx;
}

.agreement .r .r-content{
  height: calc(100% - 161rpx);
  padding:30rpx;
}
.agreement .r .r-content>view{
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  line-height: 1.6;
  font-size:28rpx;
  color:#999999;
}

.agreementBack {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4) !important;
  z-index: 9999;
}

.agreementBack.top {
  display: block;
}

.agreementBack.bottom {
  display: none;
}
