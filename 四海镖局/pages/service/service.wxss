/* pages/service/service.wxss */

.service{
  background-color:#f8f8f8;
}

/* 顶部 */

.service-head {
  display: inline-block;
  border: 3rpx solid  #2689f7;
  border-radius: 30rpx;
  margin-top: 25rpx;
  overflow: hidden;
}

.service-head text {
  padding: 0 30rpx;
  background-color: white;
  font-size: 30rpx;
  line-height: 60rpx;
  display: block;
  height: 60rpx;
  float: left;
  background-image: -webkit-gradient(linear, left 0, right 0, from(#2689f7), to(#3e4af6));
  -webkit-background-clip: text; /*必需加前缀 -webkit- 才支持这个text值 */
  -webkit-text-fill-color: transparent;
}

.service-head text.on {
  background: -webkit-linear-gradient(#2689f7, #3e4af6);
  color: white;
  -webkit-text-fill-color: initial;
}

/* 轮播 */

.service-banner{
  padding:20rpx;
}
.service-banner image{
  width:100%; 
}

/* 列表 */

.service-list {
  margin: 0 20rpx;
  background-color:white;
  padding-bottom:20rpx;
}

.service-list .ul .li {
  border-bottom: 1px solid #eeeeee;
  overflow: hidden;
  padding: 20rpx 0;
  margin:0 20rpx;
  position: relative;
}

.service-list .ul .li .img {
  width: 175rpx;
  height: 175rpx;
  float: left;
  overflow: hidden;
}

.service-list .ul .li .text {
  margin-left: 190rpx;
  margin-right:80rpx;
}

.service-list .ul .li .title {
  font-size: 30rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height:40rpx;
}

.service-list .ul .li .describe {
  font-size: 25rpx;
  line-height: 40rpx;
  height: 80rpx;
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color:#999999;
}
.service-list .ul .li .label{
  font-size: 22rpx;
  line-height: 40rpx;
  margin-top: 15rpx;
  color:#fe9c1e;
}
.service-list .ul .li .right{
  position: absolute;
  right:0;
  top:0;
  height: 100%;
  width:80rpx;
  text-align: center;
}
.service-list .ul .li .right text{
  position: relative;
  top:50%;
  transform: translateY(-50%);
  display: block;
  color:#999999;
  font-size:25rpx;
}
/* 顶部 */
.service-nav{
  position: fixed;
  top:100rpx;
  z-index: 99999;
  background-color: white;
  width:100%;
  left:0;
  height: 100rpx;
}
.service-nav .li{
  width:50%;
  float:left;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
}
.service-nav .li.on>view{
position: relative;
}
.service-nav .li.on>view::before{
  content:'';
  position: absolute;
  bottom:0;
  left:40%;
  transform: translateX(-50%);
  width:40rpx;
  height:5rpx;
  background-color:#3d4bf6;
}
.service-nav .li.on text{
  color: #3d4bf6;
}
.service-nav .li view{
  display: inline-block;
}
.service-nav .li view text{
  font-size:30rpx;
  float:left;
  display: block;
  height:100rpx;
  line-height: 100rpx;
}
.service-nav .li view text.icon-xia1,.service-nav .li view text.icon-shang{
  font-size:25rpx;
  margin-left:10rpx;
  display: block;
  height:100rpx;
  line-height: 100rpx;
  float:right;
}
.service-nav-height{
  height: 100rpx;
}

.service-list .service-list-head{
  padding:25rpx 20rpx;
  font-size:35rpx;
  line-height: 35rpx;
  border-bottom: 1px solid #eeeeee;
}


.service-nav-content{
  position: fixed;
  top:calc(-100% + 400rpx);
  left:0;
  width:100%;
  height:calc(100% - 200rpx);
  background-color:white;
  z-index: 9999;
  transition: 0.3s top;
}
.service-nav-content.top{
  top:calc(-100% + 400rpx);
}
.service-nav-content.bottom{
  top:200rpx;
}
.service-nav-content .left{
  width:35%;
  float:left;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}
.service-nav-content .left .ul{
  width:100%;
}
.service-nav-content .left .ul .li{
  line-height: 90rpx;
  height: 90rpx;
  font-size:28rpx;  
  text-align: center;
  border-bottom:1px solid #eeeeee;
}
.service-nav-content .left .ul .li.on{
  background-color:#f8f8f8;
}
.service-nav-content .right{
  width:65%;
  height: 100%;
  background-color:#f8f8f8;
  float: right;
  overflow-y: auto;
  overflow-x: hidden;
}
.service-nav-content .right .ul {
  overflow: hidden;
}
.service-nav-content .right .ul .li{
  width:29.33%;
  padding:25rpx 2%;
  display: inline-grid;
  line-height: 50rpx;
  font-size:28rpx;
  text-align: center;
}
.service-nav-content .right .ul .li.on{
  color:#3d4bf6;
}