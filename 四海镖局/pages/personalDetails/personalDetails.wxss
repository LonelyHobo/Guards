/* pages/location/location.wxss */
@import "../public/iconfont";
.personal-head {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  z-index: 9999;
}

.personal-head .head-title {
  font-size: 35rpx;
  line-height: 100rpx;
  display: block;
  text-align: center;
}
.personal-head .head-close {
  position: absolute;
  left: 5%;
  top: 50%;
  transform: translateY(-50%);
  display: block;
  min-width: 90rpx;
  height: 50rpx;
  font-size:35rpx;
  line-height: 50rpx;
}
.personal-head-height{
  height: 100rpx;
}
/* 信息 */
.personal-content{
  
}
.personal-content .top{
  border-bottom:1px solid #dddddd;
  padding:20rpx 40rpx;
  overflow: hidden;
}
.personal-content .top .l{
  width:60%;
  float:left;
  font-size:32rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.personal-content .top .r{
  width:40%;
  float:right;
  text-align: right;
}
.personal-content .top .r .img{
  width:100rpx;
  height: 100rpx;
  overflow: hidden;
  display: inline-block;
  border-radius: 50%;
}
.personal-content .top .r .img image{
  width:100%;
  height: 100%;
}
.personal-content .top .r .iconfont{
  display: block;
  font-size:25rpx;
  height: 100rpx;
  line-height: 100rpx;
  float:right;
  margin-left:20rpx;
}

.personal-content .list{}

.personal-content .list{
  border-bottom:1px solid #dddddd;
  padding:20rpx 40rpx;
  overflow: hidden;
}
.personal-content .list .l{
  width:30%;
  float:left;
  font-size:32rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.personal-content .list .r{
  width:70%;
  float:right;
  text-align: right;
  position: relative;
}
.personal-content .list .r .text{
  font-size:32rpx;
  color:#888888;
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
}
.personal-content .list .r .iconfont{
  display: block;
  font-size:25rpx;
  height: 70rpx;
  line-height: 70rpx;
  float:right;
  margin-left:20rpx;
}
.personal-content .list .r button{
  position: absolute;
  top:0;
  left: 0;
  height: 70rpx;
  width:100%;
  z-index: 99;
  opacity: 0;
}

