<view class="service">
  <view class="service-nav">
    <view class="li {{item.on=='on'?'on':''}}"  data-code="{{item.code}}" bindtap="serviceNavClick" wx:for="{{serviceNavData}}" wx:for-index="index" wx:for-item="item">
      <view>
        <text>{{item.title}}</text>
        <text class="iconfont {{item.icon}}"></text>
      </view>
    </view>
  </view>
  <view class="service-nav-content {{serviceNavTop}}" >
    <view class="left">
      <view class="ul" >
        <view class="li {{item.on=='on'?'on':''}}" data-code="{{item.code}}" bindtap="serviceAreaClick" wx:for="{{serviceAreaData}}" wx:for-index="index" wx:for-item="item" >{{item.title}}</view>
      </view>
    </view>
    <view class="right" >
      <view class="ul" >
        <view class="li {{item.on=='on'?'on':''}}" data-code="{{item.code}}" bindtap="serviceAreaMinClick" wx:for="{{serviceAreaMinData}}" wx:for-index="index" wx:for-item="item" >{{item.title}}</view>
      </view>
    </view>
  </view>
  <view class="service-nav-height"></view>
  <!-- 橫幅 -->
  <view class="service-banner" >
    <image src='/images/icon_list_banner.png' mode="widthFix" />
  </view>
  <!-- 列表 -->
  <view class="service-list">
    <view class="service-list-head" >服务商列表</view>
    <view class="ul">
      <view class="li" data-code="{{item.code}}" data-name="{{item.title}}" bindtap="serviceListClick" wx:for="{{serviceData}}" wx:for-index="index" wx:for-item="item">
        <view class="img imgCenter">
          <image src="{{item.url}}" mode="widthFix"></image>
        </view>
        <view class="text">
          <view class="title">{{item.title}}</view>
          <view class="describe">{{item.describe}}</view>
          <view class="label" >{{item.label}}</view>
          <view class="right" ><text class="iconfont icon-you1" ></text></view>
        </view>
      </view>
      <view class="loading {{loadingShow=='1'?'on':''}}" ><image src="/images/loading.gif" mode="widthFix"></image></view>
    </view>
  </view>
</view>